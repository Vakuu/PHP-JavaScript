div#edit-profile
  margin: 20px 0
  .propic
    position: relative 
    .profile-pic-upload
      position: absolute
      bottom: 0
      background: rgba(221,221,221,0.59)
      width: 100%
      padding: 19px
      text-align: center
      cursor: pointer
      display: none
    &:hover
      .profile-pic-upload 
        display: block
  .nopropic
    .profile-pic-upload 
      display: block !important
  input.form-control
    border: 1px solid grey-light
  select.form-control 
    display: inline-block
    width: auto
    margin-right: 10px
  .address-wrapper
    select
      margin-right: 0
      width: 100%
    .dib
      width: 18%