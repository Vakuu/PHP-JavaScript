.normal-header
  header.site-header
    display: block
    background-color: brand-black
    height: 80px
  #main
    padding-top: 0

.sticky-header
  header.site-header
    display: block
    background-color: brand-black
    height: 50px
    position: fixed
    z-index: 999
    width: 100%
    transition: height 0.2s ease
    .sub-navbar
      display: none
    &:hover
      height: 80px
      .sub-navbar
        display: block
  #main
    padding-top: 50px 

nav.navbar
  background-color: brand-orange
