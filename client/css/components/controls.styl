//DIALOG CONTROL STYLING
.modal-content
  border-radius:0
  box-shadow:none
  border-color:transparent
.alert-modal
  .modal-dialog
    padding-top:70px
  .modal-header
    padding: 4px
    background: grey-light
    font-family: font-family-tit
    color: brand-white
    font-size: font-size-xxxbig
    position: relative
    text-align: center
    border-bottom:none
    text-transform: uppercase
    .close
      padding: 3px 5px
      background: brand-black
      color: brand-white
      text-shadow: none
      margin-top: 1px
    &:after
      border-top: 18px solid grey-light
      border-right: 24px solid rgba(0,0,0,0)
      content: ""
      display: inline-block
      left: 43px
      position: absolute
      bottom: -17px
  .modal-footer
    float:none
    display:block
    clear:both
    margin:0 20px
//END DIALOG CONTROL STYLING




//progress bar
.progress
  box-shadow: none
  border-radius: 0
  background-color: transparent
  height: 10px
  .progress-bar-success
    background-color: brand-orange
    box-shadow: none
  .progress-bar-info
    background-color: brand-black
    box-shadow: none

//progress bar end


//dropdown style 
.sdn-dropdown
  display: inline-block
  list-style: none
  margin: 0
  padding: 0
  position: relative
  background-color: brand-black
  li 
    a 
      color: grey-dark !important
      display: block 
      padding: 5px 20px 5px 10px
      font-family: font-family-tit
      &:hover
        background-color: grey-darker
        color: #FFFFFF !important
  &:after
    position: absolute
    border-bottom: 12px solid brand-black !important
    border-right: 12px solid transparent
    top: -12px
    content: ' '
    left: 11px
//end dropdown style

//dropdown 2
.sdn-dropdown-2
  background-color: brand-black
  border-radius: 0
  li
    &:last-child 
      a 
        border-bottom: 0
  li 
    a 
      color: grey-dark !important
      display: block 
      padding: 5px 20px 5px 10px
      border-bottom: 1px solid #555658
      font-family: font-family-tit
      &:hover
        background-color: grey-darker
        color: #FFFFFF !important
  &:after
    position: absolute
    border-bottom: 12px solid brand-black !important
    border-right: 12px solid transparent
    top: -12px
    content: ' '
    left: 11px
//end dropdown 2

