//BUTTONS
.btn 
  font-family: font-family-tit
  padding: 3px 7px
.btn.btn-primary
.btn.btn-success
.btn.btn-default
  border-radius:0
  text-transform:uppercase
  &:hover
  &:active
    outline:none
    box-shadow:none

.btn-primary
  background-color:grey !important
  border:2px solid grey-dark !important
  color:brand-white
  &:hover
    background-color:brand-black !important
    border:2px solid grey !important
    color:brand-white
  &:active
    background-color:grey !important
    border:2px solid grey-dark !important

.btn-default
  background-color:brand-orange !important
  border:2px solid brand-orange-dark !important
  color:brand-white !important
  &:hover
    background-color:brand-orange-dark !important
    border:2px solid brand-orange !important
    color:brand-white !important  
  &:active
    background-color:brand-orange !important
    border:2px solid brand-orange-dark !important
//END BUTTONS

//TEXTBOX STYLE
input[type="text"]
input[type="password"]
input[type="email"]
  box-shadow:none
  border:none
  &:focus
    box-shadow:none
    outline:none
//END TEXTBOX STYLE


//RATING STYLE

ul.rating
  display:block
  list-style:none
  margin:0
  padding:0
  
ul.rating li
  display:inline-block
  margin:4px

ul.rating li i 
  display:inline-block
  height:28px
  width:28px

ul.rating li label.no-of-star
  display:none

div.square-rating
  ul.rating
    padding:0
    margin:0
    text-align:left
    li
      display:inline-block
      height:17px
      margin:5px 10px 5px 0px
      i 
        height:15px
        width:15px
        background:none
        border:1px solid brand-black
    li.filled
      i 
        background:brand-orange

div.square-rating label.no-of-star
  display:block !important
  text-align:center

label
  font-weight:normal

label.g 
  color:grey-dark

