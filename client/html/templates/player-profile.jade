                  div.info 
                    h4.grey AGE
                    h3 28
                  div.info 
                    h4.grey GENDER
                    h3 Male
                  div.info 
                    h4.grey HEIGHT
                    h3 1,85m
                  div.info 
                    h4.grey POSITION
                    h3 Guard
                  div.info 
                    h4.grey WEIGHT
                    h3 85kg
                  div.info 
                    h4.grey LEVEL
                    h3 Social
              div.col-sm-4
                div.player-info 
                  h4.grey.dib.mt10 PLAYER STATS
                  h4.mt0.mb0.grey AGE
                  h3.mt0 28
                  h4.mt0.mb0.grey GENDER
                  h3.mt0 Male
          div.row 
            div.col-sm-12
              div.fairplayer.dib
                h4.grey.mt0.pt10 FAIRPLAYER(score)
