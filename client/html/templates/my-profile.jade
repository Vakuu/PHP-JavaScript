
div#player-profile.player-profile
  div.container
    section.profile
      div.row
        div.col-xs-7.left
          
          div.row
            div.col-xs-8
              div.heading
                h1.player-name {{info.fname + ' '+ info.lname}}  
                  br
                  small.hidden king of Court in 
                    Israels, Plads, 
                    | CPH and 
                    a 6 more
                h4.hidden Home Court: 
                  span The Cage (NY)
            div.col-xs-4
          div.row
            div.userinfo-wrapper 
              div.col-sm-4.pl0
                div.pro-pic-wrapper(style="background-image: url({{info.photo.image_small_url}})", x-ng-show="info.photo", sdn-media-element, large-image="{{info.photo.media_url}}", title="{{info.name}}")
                //img.user-pro-pic(x-ng-src="{{info.photo.image_small_url}}", x-ng-show="info.mainImage", sdn-media-element)
                span.default202.icon-sdn-default(x-ng-show="!info.photo")
                //img(src="http://www.forumpiece.com/data/avatars/l/24/24777.jpg?1393262966", sdn-media-element)
              div.col-sm-5
                div.player-info 
                  h4.grey.dib.mt10(style="visibility: hidden") Player Info  
                  small(style="visibility: hidden")
                    a.grey.ml10(href="#/edit-profile") Edit 
                      span.icon-setting
                  div.info 
                    h4.grey AGE
                    h3 {{ info.dob | getAgeFromDOB }}
                  div.info 
                    h4.grey GENDER
                    h3 {{info.gender == 'm' ? 'Male' : 'Female'}}
                  div.info 
                    h4.grey HEIGHT
                    h3 {{info.height ? info.height : '-,--m'}}
                  div.info 
                    h4.grey POSITION
                    h3 {{info.position ? info.position : '---'}}
                  div.info 
                    h4.grey WEIGHT
                    h3 {{info.weight ? info.weight : '--kg'}}
                  div.info 
                    h4.grey LEVEL
                    h3 {{info.level ? info.level.replace('_', ' ') : '--'}}
              div.col-sm-3
                div.player-info
                  a.gray-link(style="font-size: 19px; float: right; margin-top: 5px; margin-right: -10px;", href="#/edit-profile") 
                    i.icon-setting 
                  h4.grey.dib.mt10(style="visibility: hidden;") -
                  h4.mt0.mb0.grey GAMES
                  h3.mt0 {{info.games ? info.games : '---'}}
                  h4.mt0.mb0.grey WINS
                  h3.mt0 {{info.wins ? info.wins : '---'}}

          div.row 
            //- div.col-sm-4
            //-   div.fairplayer.dib
            //-     h4.grey.mt0.pt10 FAIRPLAYER(score)
            //-     h3.mt10 
            //-       span.icon-level-5
