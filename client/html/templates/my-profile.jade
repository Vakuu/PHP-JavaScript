            //-       span.icon-level-3.orange-color
            //-       span.icon-level-2
            //-       span.icon-level-1
            div.col-sm-12.connection-wrapper
              h2.grey.dib.ml10 
                span.icon-media
                |  MEDIA 
                a.black-link {{info.albums.length | doubleNumber: 3 }}
              h2.grey.dib
                span.icon-friends
                |  FRIENDS 
                a.black-link {{info.friends.length | doubleNumber: 3 }}
              h2.grey.dib 
                span.icon-team-symbol
                |  TEAMS 
                a.black-link {{info.teams.length | doubleNumber: 3 }}
          div.row
            div.col-xs-12
              hr
              sdn-skills-rating
              hr
          
          div.row.hidden 
            div.col-sm-12
              div.badge-heading.pull-left
